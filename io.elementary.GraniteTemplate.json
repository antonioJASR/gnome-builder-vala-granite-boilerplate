{
    "app-id" : "io.elementary.Granitetemplate",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.26",
    "sdk" : "org.gnome.Sdk",
    "command" : "HelloWorldGtkDemo",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags" : "-O2 -g",
        "cxxflags" : "-O2 -g",
        "env" : {
            "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_GIRDIR" : "/app/share/gir-1.0",
            "PKG_CONFIG_GOBJECT_INTROSPECTION_1_0_TYPELIBDIR" : "/app/lib/girepository-1.0",
            "V" : "1"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libgee",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://git.gnome.org/browse/libgee.git"
                }
            ]
        },
        {
            "name" : "granite",
            "buildsystem" : "cmake",
            "config-opts" : [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_INSTALL_LIBDIR=/app/lib"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/elementary/granite.git"
                }
            ]
        },
        {
            "name" : "gnome-builder-vala-hello-world",
            "buildsystem" : "meson",
            "config-opts" : [
                "--libdir=lib"
            ],
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/roymckenzie/gnome-builder-vala-hello-world"
                }
            ]
        }
    ]
}
